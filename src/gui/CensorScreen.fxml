<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="553.0" prefWidth="759.0" stylesheets="@resources/main.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <children>
        <ImageView fitHeight="90.0" fitWidth="102.0" layoutX="47.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@resources/logo.png" />
            </image>
        </ImageView>
        <Label alignment="CENTER" layoutX="148.0" layoutY="27.0" prefHeight="67.0" prefWidth="484.0" text="Welcome to Beep!" textAlignment="JUSTIFY" textFill="WHITE">
            <font>
                <Font name="Lato Light" size="53.0" />
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="81.0" layoutY="119.0" prefHeight="67.0" prefWidth="598.0" text="Almost there! " textAlignment="JUSTIFY" textFill="WHITE">
            <font>
                <Font name="Lato Light" size="22.0" />
            </font>
        </Label>
        <Button layoutX="327.0" layoutY="437.0" mnemonicParsing="false" onAction="#handleCensor" prefHeight="67.0" prefWidth="125.0" styleClass="startBtn" text="Censor" textFill="#ffffff78">
            <font>
                <Font name="Lato Light" size="22.0" />
            </font>
        </Button>
        <Button fx:id="exitBtn" layoutX="663.0" layoutY="-1.0" mnemonicParsing="false" onAction="#exit" prefHeight="56.0" prefWidth="95.0" styleClass="exitBtn" text="X" textAlignment="CENTER" textFill="#ffffff78">
            <font>
                <Font name="Lato Light" size="28.0" />
            </font>
        </Button>
      <Label alignment="CENTER" layoutX="91.0" layoutY="164.0" prefHeight="67.0" prefWidth="598.0" text="How do you want Beep! to censor your music?" textAlignment="JUSTIFY" textFill="WHITE">
         <font>
            <Font name="Lato Light" size="22.0" />
         </font>
      </Label>
      <ToggleButton layoutX="410.0" layoutY="250.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="162.0" styleClass="censorButtons" text="Trimming">
         <font>
            <Font size="28.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="censorButtons" />
         </toggleGroup>
         <tooltip>
            <Tooltip text="Beep! seamlessly trims the explicit words entirely out of your song, almost as if they didn't exist!" />
         </tooltip>
      </ToggleButton>
      <ToggleButton layoutX="193.0" layoutY="250.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="162.0" styleClass="censorButtons" text="Filtering" toggleGroup="$censorButtons">
         <font>
            <Font size="28.0" />
         </font>
         <tooltip>
            <Tooltip text="Beep! filters the explicit vocals from your song while keeping the background instrumentals." />
         </tooltip>
      </ToggleButton>
      <Label alignment="CENTER" layoutX="88.0" layoutY="360.0" prefHeight="67.0" prefWidth="598.0" text="Ready to remove explicit content? Click below!" textAlignment="JUSTIFY" textFill="WHITE">
         <font>
            <Font name="Lato Light" size="22.0" />
         </font>
      </Label>
      <Label fx:id="warningLabel" alignment="CENTER" layoutX="217.0" layoutY="502.0" prefHeight="42.0" prefWidth="346.0" text="Please select a censoring option!" textAlignment="JUSTIFY" textFill="WHITE" visible="false">
         <font>
            <Font name="Lato Light" size="15.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="232.0" layoutY="316.0" prefHeight="42.0" prefWidth="291.0" text="Hover for these options for more info." textAlignment="JUSTIFY" textFill="WHITE">
         <font>
            <Font name="Lato Light" size="17.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
